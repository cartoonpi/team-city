{
  "name": "simple-teamcity-test",
  "version": "1.0.0",
  "description": "Simple test project for TeamCity",
  "main": "src/calculator.js",
  "scripts": {
    "test": "jest --coverage",
    "test:teamcity": "jest --coverage --testResultsProcessor=jest-teamcity-reporter"
  },
  "devDependencies": {
    "jest": "^29.5.0",
    "jest-teamcity-reporter": "^0.9.0"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "coverage",
    "collectCoverageFrom": [
      "src/**/*.js"
    ]
  }
}
